---
import InlineCode from '../ui/InlineCode.astro';

const methods = [
  { key: 'bun', label: 'Bun', commands: ['bun add -g signetai', 'signet setup'], comment: '# recommended', docs: '/docs/quickstart#install', docsLabel: 'Quickstart docs' },
  { key: 'npm', label: 'npm', commands: ['npm install -g signetai', 'signet setup'], comment: '# works everywhere', docs: '/docs/quickstart#install', docsLabel: 'npm docs' },
  { key: 'source', label: 'Source', commands: ['git clone https://github.com/Signet-AI/signetai.git', 'cd signetai && bun install && bun run build'], comment: '# build from source', docs: '/docs/contributing#development-setup', docsLabel: 'Build docs' },
];
---

<section id="quickstart" class="container" style="border-top: 1px solid var(--color-border)">
  <div class="section-header reveal">
    <div class="crosshair"></div>
    <span class="section-label">Quick Start</span>
    <span class="section-index">02 / 07</span>
  </div>

  <div class="quickstart-shell reveal">
    <div class="quickstart-tabs" role="tablist" aria-label="Install method">
      {methods.map((m, i) => (
        <button
          type="button"
          class:list={['quickstart-tab', { 'is-active': i === 0 }]}
          role="tab"
          aria-selected={i === 0 ? 'true' : 'false'}
          data-quickstart-target={m.key}
        >
          {m.label}
        </button>
      ))}
    </div>

    <div class="quickstart-panels">
      {methods.map((m, i) => (
        <div
          id={`quickstart-panel-${m.key}`}
          class:list={['quickstart-panel', { 'is-active': i === 0 }]}
          role="tabpanel"
          data-quickstart-panel={m.key}
          hidden={i !== 0 ? true : undefined}
        >
          {m.commands.map((cmd) => (
            <div class="quickstart-cmd">
              <span class="quickstart-prompt">$</span>
              <code class="quickstart-code">{cmd}</code>
              <button type="button" class="copy-btn quickstart-copy-btn" aria-label={`Copy: ${cmd}`}>
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
              </button>
            </div>
          ))}
          <div class="quickstart-meta">
            <span class="quickstart-hint">{m.comment}</span>
            <a href={m.docs} class="quickstart-docs-link">{m.docsLabel} &#8594;</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
