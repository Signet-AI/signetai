{
  "name": "signet-harness",
  "version": "0.12.3",
  "license": "Apache-2.0",
  "description": "Signet debugging harness - full pipeline observability in a conversational CLI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "signet-harness": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --outfile ./dist/cli.js --target node && bun build ./src/index.ts --outfile ./dist/index.js --target node",
    "dev": "bun --watch src/cli.ts",
    "start": "bun src/cli.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mariozechner/pi-agent-core": "^0.55.3",
    "@mariozechner/pi-ai": "^0.55.3",
    "@mariozechner/pi-coding-agent": "^0.55.3",
    "@mariozechner/pi-tui": "^0.55.3",
    "@signet/core": "workspace:*"
  }
}
